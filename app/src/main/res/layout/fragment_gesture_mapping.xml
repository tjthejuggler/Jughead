<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/gesture_mapping_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Header -->
    <TextView
        android:id="@+id/gesture_mapping_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gesture Mapping"
        android:textSize="24sp"
        android:textStyle="bold"
        android:paddingBottom="16dp" />

    <!-- RecyclerView for Gesture List -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/gesture_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <!-- Add New Gesture Button -->
    <Button
        android:id="@+id/add_new_gesture_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add New Gesture" />

</LinearLayout>
