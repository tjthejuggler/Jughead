<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Ball 1 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ball 1"
                android:textSize="18sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/ball1ColorIndicator"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginStart="8dp"
                android:background="@drawable/circle_shape" />
        </LinearLayout>

        <EditText
            android:id="@+id/ball1IpAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="IP Address"
            android:inputType="textNoSuggestions"
            android:digits="0123456789."
            android:maxLength="15"
            android:layout_marginTop="8dp" />

        <Button
            android:id="@+id/ball1ColorButton"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="Set Color"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="16dp" />

        <!-- Ball 2 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ball 2"
                android:textSize="18sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/ball2ColorIndicator"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginStart="8dp"
                android:background="@drawable/circle_shape" />
        </LinearLayout>

        <EditText
            android:id="@+id/ball2IpAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="IP Address"
            android:inputType="textNoSuggestions"
            android:digits="0123456789."
            android:maxLength="15"
            android:layout_marginTop="8dp" />

        <Button
            android:id="@+id/ball2ColorButton"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="Set Color"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="16dp" />

        <!-- Ball 3 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ball 3"
                android:textSize="18sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/ball3ColorIndicator"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginStart="8dp"
                android:background="@drawable/circle_shape" />
        </LinearLayout>

        <EditText
            android:id="@+id/ball3IpAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="IP Address"
            android:inputType="textNoSuggestions"
            android:digits="0123456789."
            android:maxLength="15"
            android:layout_marginTop="8dp" />

        <Button
            android:id="@+id/ball3ColorButton"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="Set Color"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="16dp" />

        <!-- Ball 4 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ball 4"
                android:textSize="18sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/ball4ColorIndicator"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginStart="8dp"
                android:background="@drawable/circle_shape" />
        </LinearLayout>

        <EditText
            android:id="@+id/ball4IpAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="IP Address"
            android:inputType="textNoSuggestions"
            android:digits="0123456789."
            android:maxLength="15"
            android:layout_marginTop="8dp" />

        <Button
            android:id="@+id/ball4ColorButton"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="Set Color"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="16dp" />

    </LinearLayout>
</ScrollView>
