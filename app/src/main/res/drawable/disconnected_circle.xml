<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="oval">
            <solid android:color="#FFE0E0" />
            <size
                android:width="24dp"
                android:height="24dp" />
        </shape>
    </item>
    <item>
        <rotate
            android:fromDegrees="45"
            android:pivotX="50%"
            android:pivotY="50%"
            android:toDegrees="45">
            <shape android:shape="rectangle">
                <solid android:color="#FF0000" />
                <size
                    android:width="16dp"
                    android:height="2dp" />
            </shape>
        </rotate>
    </item>
    <item>
        <rotate
            android:fromDegrees="-45"
            android:pivotX="50%"
            android:pivotY="50%"
            android:toDegrees="-45">
            <shape android:shape="rectangle">
                <solid android:color="#FF0000" />
                <size
                    android:width="16dp"
                    android:height="2dp" />
            </shape>
        </rotate>
    </item>
</layer-list>
